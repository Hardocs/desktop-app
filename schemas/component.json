{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "Component",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
    {
      "name": "Arduino UNO",
      "quantity": 1,
      "specifications": {
        "voltage": "12 V",
        "processor": null,
        "datasheet": "link"
      },
      "assets": ["board.STEP", "schematic.pdf"]
    }
  ],
  "required": ["name", "quantity", "specifications", "assets"],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The name schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": ["Arduino UNO"]
    },
    "quantity": {
      "$id": "#/properties/quantity",
      "type": "integer",
      "title": "The quantity schema",
      "description": "An explanation about the purpose of this instance.",
      "default": 0,
      "examples": [1]
    },
    "specifications": {
      "$id": "#/properties/specifications",
      "type": "object",
      "title": "The specifications schema",
      "description": "An explanation about the purpose of this instance.",
      "default": {},
      "examples": [
        {
          "voltage": "12 V",
          "processor": null,
          "datasheet": "link"
        }
      ],
      "required": ["voltage", "processor", "datasheet"],
      "properties": {
        "voltage": {
          "$id": "#/properties/specifications/properties/voltage",
          "type": "string",
          "title": "The voltage schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": ["12 V"]
        },
        "processor": {
          "$id": "#/properties/specifications/properties/processor",
          "type": "null",
          "title": "The processor schema",
          "description": "An explanation about the purpose of this instance.",
          "default": null,
          "examples": [null]
        },
        "datasheet": {
          "$id": "#/properties/specifications/properties/datasheet",
          "type": "string",
          "title": "The datasheet schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": ["link"]
        }
      },
      "additionalProperties": true
    },
    "assets": {
      "$id": "#/properties/assets",
      "type": "array",
      "title": "The assets schema",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "examples": [["board.STEP", "schematic.pdf"]],
      "additionalItems": true,
      "items": {
        "$id": "#/properties/assets/items",
        "anyOf": [
          {
            "$id": "#/properties/assets/items/anyOf/0",
            "type": "string",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["board.STEP", "schematic.pdf"]
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
